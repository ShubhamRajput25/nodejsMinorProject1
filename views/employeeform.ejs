<html>

    <style>
      *{
        margin: 0;
        padding: 0;
      } 

      .box{
        width: 600px;
        height: auto;
        font-family: Rethink Sans;
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0px 0px 5px rgb(188, 187, 187);
        padding-top: 5px;
        padding-bottom: 5px;
      }

      .headingstyle{
        padding: 3px;
        display: flex;
        justify-content: center;
        
      }

      #rowstyle{
        margin-top: 10px;
      }

      .screen{
        width: 100%;
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;

      }

      .rowstyle{
        margin:5px;
        display: flex;
      }
      .logo{
        width: 40px;
        margin-right: 10px;
      }
      .result{
        width: 40px;
        margin-left: auto;
      }
    </style>

    <head>
      <script src=" https://code.jquery.com/jquery-3.7.1.min.js"></script>
      <script src="/javascripts/cstatecity.js"></script>

        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@700&display=swap" rel="stylesheet">

        <link href="https://fonts.googleapis.com/css2?family=Caveat:wght@600&family=Dancing+Script:wght@700&display=swap" rel="stylesheet">


        <link href="https://fonts.googleapis.com/css2?family=Afacad:ital@1&family=Caveat:wght@600&family=Dancing+Script:wght@700&display=swap" rel="stylesheet">

        
    </head>

    <body>
<div class="screen">
            <div class="box">

            <div class="container">
              <form action="/employee/submit_form" method="post" enctype="multipart/form-data">
                <div class="rowstyle" >
                    
                     <div class="logo"> <img src="/images/logo.png" width="100%"> </div>
                        <h1>Add New Employee</h1>
                      <div class="result"> <a href="/showresult/showemployeedata"> <img src="/images/showresulticon.png" width="100%"></a> </div>
                    
                </div>

                <div class="row" id="rowstyle">
                    <div class="col-sm-4 ">
                        <div class="form-group">
                            <input type="text" class="form-control" id="firstname" name="firstname" placeholder="Enter first name">
                          </div>
                    </div>
                   
                    <div class="col-sm-4 ">
                        <div class="form-group">
                            <input type="text" class="form-control" id="middlename" name="middlename" placeholder="Enter middle name">
                          </div>
                    </div>

                    <div class="col-sm-4 ">
                        <div class="form-group">
                            <input type="text" class="form-control" id="lastname" name="lastname" placeholder="Enter last name">
                          </div>
                    </div>


                </div>

                <div class="row" id="rowstyle">
                    <div class="col-sm-3">
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="gender" id="male" value="male">
                            <label class="form-check-label" for="male">Male</label>
                          </div>
                    </div>

                    <div class="col-sm-3">
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="gender" id="female" value="female">
                            <label class="form-check-label" for="female">Female</label>
                          </div>
                    </div>

                    <div class="col-sm-6">
                        <input class="form-control" type="date" name="dob" id="dob">
                    </div>
                </div>

                <div class="row " id="rowstyle">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <input type="text" class="form-control" id="salary" name="salary" placeholder="Enter salary">
                          </div>   
                    </div>

                    <div class="col-sm-6" >
                        <select class="form-control" name="work" id="work">
                            <option selected>select</option>
                            <option >sales</option>
                            <option >accounts</option>
                            <option >coder</option>
                            <option >designer</option>
                            <option >tester</option>
                          </select>
                    </div>
                </div>

                <div class="row" id="rowstyle">
                    <div class="col-sm-12">
                        <input class="form-control form-control-lg" type="text" name="address" id="address" placeholder="Address">
                    </div>
                </div>

                <div class="row" id="rowstyle">
                <div class="col-sm-6">
                <select class="form-control" name="state" id="state">
                <option selected>select state</option>
                </select>
                </div>

                <div class="col-sm-6">
                <select class="form-control" name="city" id="city">
                <option selected>select city</option>
                </select>
                </div>

                </div>

                <div class="row" id="rowstyle">
                <div class="col-sm-12">
                <input type="file" accept="image/jpeg" class="form-control" id="picture" name="picture">
                </div>
                </div>

                <div class="row" id="rowstyle">

                <div class="col-sm-6">
                <button type="submit" class="btn btn-primary" style="width: 70%;" >Submit</button>
                </div>

                <div class="col-sm-6">
                <button type="reset" class="btn btn-danger" style="width: 70%;">reset</button>
                </div>
                </div>

                <div class="row" id="rowstyle">
                  <div class="col-sm-12" style="color: green;">
                      <%=message %>
                    </div>
                    </div>

                  </form>
            </div>

            </div>
       </div>
       
    </body>

</html>