<html>
    <head>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@700&display=swap" rel="stylesheet">
    
        <link href="https://fonts.googleapis.com/css2?family=Caveat:wght@600&family=Dancing+Script:wght@700&display=swap" rel="stylesheet">
    
    
        <link href="https://fonts.googleapis.com/css2?family=Afacad:ital@1&family=Caveat:wght@600&family=Dancing+Script:wght@700&display=swap" rel="stylesheet">
    </head>

    <style>
*{
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

.screen{
        width: 100%;
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;

      }
      .box{
        width: 400px;
        height: auto;
        font-family: Rethink Sans;
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0px 0px 5px rgb(188, 187, 187);
        padding-top: 5px;
        padding-bottom: 5px;
      }
      .heading{
        font-size: 26px;
        font-weight: 900;
        padding-left: 10px;
        margin-bottom: 10px;
      }
    </style>
    <body>
        <div class="screen">
            <div class="box">
                <form action="/employee/updateprofile" method="post">
                <div class="container">
                    <div class="heading">Edit Profile</div>

                    <input type="hidden" name="preemailid" value="<%= data.emailid %>">

                    <div class="row" style="margin-bottom: 20px;">
                        <div class="col-sm-12">
                            <input type="text" class="form-control" name="adminname" value="<%= data.adminname %>">
                        </div>
                    </div>

                    <div class="row" style="margin-bottom: 20px;">
                        <div class="col-sm-12">
                            <input type="text" class="form-control" name="emailid" value="<%= data.emailid %>">
                        </div>
                    </div>

                    <div class="row" style="margin-bottom: 20px;">
                        <div class="col-sm-12">
                            <input type="text" class="form-control" name="mobileno" value="<%= data.mobileno %>">
                        </div>
                    </div>

                    <div class="row" style="margin-bottom: 20px;">
                        <div class="col-sm-12">
                            <input type="password" class="form-control" name="password" value="<%= data.password %>">
                        </div>
                    </div>

                    <div style="display: flex; justify-content: center; margin-bottom: 10px;"><button type="submit" class="btn btn-primary">OK</button></div>
                </div>
                </form>
            </div>
        </div>
    </body>
</html>