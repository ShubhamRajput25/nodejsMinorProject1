<html>

    <style>
      *{
        margin: 0;
        padding: 0;
      } 

      .box{
        width: 800px;
        height: 400px;
        font-family: Rethink Sans;
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0px 0px 3px rgb(207, 206, 206);
        padding-top: 5px;
        padding-bottom: 5px;
        overflow: auto;
      }

      .headingstyle{
        padding: 3px;
        display: flex;
        justify-content: center;
        
      }

      #rowstyle{
        margin-top: 10px;
      }

      .screen{
        width: 100%;
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;

      }

      .rowstyle{
        margin:5px;
        display: flex;
      }
      .logo{
        width: 40px;
        margin-right: 10px;
      }
      .result{
        width: 40px;
        margin-left: auto;
      }
    </style>

    <head>
      <script src=" https://code.jquery.com/jquery-3.7.1.min.js"></script>
      <script src="/javascripts/cstatecity.js"></script>

        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@700&display=swap" rel="stylesheet">

        <link href="https://fonts.googleapis.com/css2?family=Caveat:wght@600&family=Dancing+Script:wght@700&display=swap" rel="stylesheet">


        <link href="https://fonts.googleapis.com/css2?family=Afacad:ital@1&family=Caveat:wght@600&family=Dancing+Script:wght@700&display=swap" rel="stylesheet">

        
    </head>

    <body>
        <div class="screen">

            <div class="box">

            <div class="container">
             
                <div class="rowstyle" >
                    
                     <div class="logo"> <img src="/images/logo.png" width="100%"> </div>
                        <h1>Employee List</h1>
                      <div class="result"> <a href="/employee/employeeform"> <img src="/images/addrecord.png" width="100%"> </a> </div>
                    
                </div>

                <table  class="table">
                    <thead>
                      <tr>
                        <th scope="col">#</th>
                        <th scope="col">Name / Id</th>
                        <th scope="col">Gender</th>
                        <th scope="col">work</th>
                        <th scope="col">Address</th>
                        <th scope="col">salary</th>
                        <th scope="col">Picture</th>
                        <th scope="col">Update</th>
                      </tr>
                    </thead>

                    <tbody>
                <%if(status){
                    data.map((item,i)=>{ %>
                        
                            <tr>
                              <th scope="row"><%= i+1 %></th>
                              <td><%= item.employeeid %> / <%= item.employeename %></td>
                              <td><%= item.gender %> <br> <%= item.dob %></td>
                              <td><%= item.work %></td>
                              <td><%= item.address %> <br> <%= item.cityname %> <%= item.statename %></td>
                              <td><%= item.salary %></td>
                              <td>
                                <a href="/employee/showpicture?employeeid=<%= item.employeeid %>&employeename=<%=item.employeename%>&picture=<%= item.picture %>" style="cursor: pointer; text-decoration: none;">
                                <img src="/images/<%= item.picture %>" style=" width: 50; height: 50; border-radius: 50%;"></a>
                              </td>
                              <td><a href="/employee/update_all_data?employeeid=<%= item.employeeid %>" style="cursor: pointer; text-decoration: none;">Update</a></td>
                            </tr>
                        
                            
                  <%  })
                } %>

                    </tbody>
            </table>
            </div>

            </div>

           


        </div>
       
       
    </body>

</html>